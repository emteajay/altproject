<%- model_class = Portfolio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fund) %></th>
      <th><%= model_class.human_attribute_name(:commitment) %></th>
      <th><%= model_class.human_attribute_name(:paid_in) %></th>
      <th><%= model_class.human_attribute_name(:distributed) %></th>
      <th><%= model_class.human_attribute_name(:adjustment) %></th>
      <th><%= model_class.human_attribute_name(:net_asset_value) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= link_to portfolio.id, portfolio_path(portfolio) %></td>
        <td><%= portfolio.fund %></td>
        <td><%= portfolio.commitment %></td>
        <td><%= portfolio.paid_in %></td>
        <td><%= portfolio.distributed %></td>
        <td><%= portfolio.adjustment %></td>
        <td><%= portfolio.net_asset_value %></td>
        <td><%=l portfolio.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_portfolio_path(portfolio), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      portfolio_path(portfolio),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_portfolio_path,
            :class => 'btn btn-primary' %>
