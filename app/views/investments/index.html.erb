<%- model_class = Investment -%>
<div class="page-header">
  <h1>Tufts University | <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fund) %></th>
      <th><%= model_class.human_attribute_name(:commitment) %></th>
      <th><%= model_class.human_attribute_name(:paid_in) %></th>
      <th><%= model_class.human_attribute_name(:distributed) %></th>
      <th><%= model_class.human_attribute_name(:adjustment) %></th>
      <th><%= model_class.human_attribute_name(:net_asset_value) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @investments.each do |investment| %>
      <tr>
        <td><%= link_to investment.id, investment_path(investment) %></td>
        <td><%= investment.fund %></td>
        <td><%= investment.commitment %></td>
        <td><%= investment.paid_in %></td>
        <td><%= investment.distributed %></td>
        <td><%= investment.adjustment %></td>
        <td><%= investment.net_asset_value %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_investment_path(investment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      investment_path(investment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>        
        </td>
      </tr>
    <% end %>
      <div>
        <tr>
          <th>Total</th>
          <th></th>   
          <th><%= Investment.sum('commitment') %></th> 
          <th><%= Investment.sum('paid_in') %></th> 
          <th><%= Investment.sum('distributed') %></th>
          <th><%= Investment.sum('adjustment') %></th>
          <th><%= Investment.sum('net_asset_value') %></th>
          <th></th>
        </tr>
      </div>
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_investment_path,
            :class => 'btn btn-primary' %>
