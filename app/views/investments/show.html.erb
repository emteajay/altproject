<%- model_class = Investment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fund) %>:</strong></dt>
  <dd><%= @investment.fund %></dd>
  <dt><strong><%= model_class.human_attribute_name(:commitment) %>:</strong></dt>
  <dd><%= @investment.commitment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paid_in) %>:</strong></dt>
  <dd><%= @investment.paid_in %></dd>
  <dt><strong><%= model_class.human_attribute_name(:distributed) %>:</strong></dt>
  <dd><%= @investment.distributed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adjustment) %>:</strong></dt>
  <dd><%= @investment.adjustment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:net_asset_value) %>:</strong></dt>
  <dd><%= @investment.net_asset_value %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              investments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_investment_path(@investment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              investment_path(@investment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
